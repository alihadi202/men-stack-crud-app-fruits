<!-- views/fruits/show.ejs -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= fruit.name %></title> <!-- Dynamic title based on fruit name -->
  </head>
  <body>
    <%- include('../partials/nav') %>
    <h1><%= fruit.name %></h1> <!-- Display fruit name -->
    <%if(fruit.isReadyToEat){%>
        <h2><%= fruit.name %> is ready to eat</h2>
    <%}else{%>
        <h2><%= fruit.name %> is not ready to eat</h2>
    <%}%>

    <form action="/fruits/<%=fruit._id%>?_method=DELETE" method="POST">
        <button type="submit">Delete <%= fruit.name %></button>
      </form>
      
      <form action="/fruits/<%=fruit._id%>/edit" method="GET">
        <button type="submit">update <%= fruit.name %></button>
      </form>

      <a href="/fruits">Back to Fruits</a>
  </body>
</html>